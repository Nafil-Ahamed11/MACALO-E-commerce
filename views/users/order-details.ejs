<%- include('../layouts/header.ejs') %>
<% if(typeof userData !== 'undefined'){ %>
   
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shop</h4>
                        <div class="breadcrumb__links">
                            <a href="/home">Home</a>
                            <span>Order Details</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
   
<% }else{ %>
 
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shop</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Order Details</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% }  %>

  <div class="container mb-3">
    <div class="row">
       
            <% products.forEach(product=>{ %>

      
              <div class="col-lg-4 col-md-6 col-sm-12 mt-4  ">
                <div class="card m-auto" style="width: 18rem;">
                  <img class="card-img-top" src="<%=product.image[0] %>" alt="Card image cap">
                  <div class="card-body">
                    <% orders.forEach(order=>{ %>
                        <% var productName = product.name.toLowerCase(); 
                         var displayProductName = productName.length > 20 ? productName.slice(0,20)+ "..":productName;
                         %>
                    <h5 class="card-title fs-6 "><%= displayProductName %></h5>
                    <span> ( Size: <%= order.orderList[0].size.toLowerCase() %>)</span>
                    <div class="row">
                      <div class="col-12">
                        <p class="card-text">Price: <%= product.price %></p>
                      </div>
                      <div class="col-12">
                        <p>Quantity: <%= order.orderList[0].quantity %></p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                       <p>Status: <%= order.orderStatus %></p>
                      </div>
                      <div class="col-12">
                       <p>Total: <%= order.total %></p>
   
                      </div>
                     </div>
                    <p>Order Date: <%= new Date(order.orderDate).toLocaleString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    <%
                    const [day, month, year] = order.deliveryDate.split('/').map(Number);
                    const deliveryDateObject = new Date(year, month - 1, day);
                    %>
                    <p>Delivery Date: <%= deliveryDateObject.toLocaleString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                   
                  </div>
                  <%  }) %>
                </div>
        </div>
        <%   })  %> 
    </div>
  </div>



<div class="container-fluid mt-2 p-4 d-flex justify-content-center align-items-center flex-column flex-md-row">
  
  <div class="card mb-4 mb-md-0" style="width: 22rem; border: none;">
    <div class="card-body">
      <h4 class="card-title">Sign in</h4>
      <form action="/login" method="post"  onsubmit="return validateLogin(event)">
        <!-- Email input -->
        <div class="form-outline mb-4">
          <input type="email" id="email" name="email" class="form-control shadow-none "  style="border: 1px solid rgb(187, 180, 180)" />
          <label class="form-label" for="form2Example1">Email address</label>
        </div>
      
        <!-- Password input -->
        <div class="form-outline mb-4">
          <input type="password" id="password" name="password" class="form-control shadow-none"  style="border: 1px solid rgb(187, 180, 180)"/>
          <label class="form-label" for="form2Example2">Password</label>
        </div>
      
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
              <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
          </div>
      
          <div class="col">
            <!-- Simple link -->
            <a class="text-danger text-decoration-none" href="/forgetPass">Forgot password?</a>
          </div>
        </div>
      
        <!-- Submit button -->
        <button type="submit" style="font-weight: bold;" class="btn btn-outline-danger btn-block mb-4  shadow-none">Sign in</button>
      
        <!-- Register buttons -->
        <div class="text-center">
          <p>Not a member? <a  class="text-danger text-decoration-none" href="/register">Register</a></p> 
        </div>
      </form>
    </div>
  </div>
</div>



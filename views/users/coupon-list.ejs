<div class="container coupon-container ">
  <div class="row">
    <% if(userCollection && userCollection.coupons){ %>
        <% userCollection.coupons.forEach(coupon => { %>
        <div class="col-6">
            <div class="wrapper d-flex justify-content-center align-items-center">

                <div class="card coupon-card">
        
        
                <div class="cross-bg">
                    
                </div>
        
                <div class="content">
        
                <div class="logo text-right">
                
                </div>
        
                <div class="text-center text-uppercase text-white off">
        
        
                    <span class="text-white">Flat</span>
                    <h1  class="mt-0 text-white "><%=coupon.offer %>%</h1>
                    
                </div>
        
                <div class="text-center text-white">
        
                    <span class="plus text-white ">use</span>
                    
                </div>
        
        
                <div class="text-center text-uppercase text-white">
        
        
                
                    <h5 class="m-0  text-white "><%= coupon.name %> </h5>
                    
                </div>
        
        
                <div class="px-5 mb-3">
                    
                    <div class="code text-center mt-4">
        
                    <span>Use code : <%= coupon.code %></span>
                    <!-- <span class="material-symbols-outlined">
                    content_copy
                    </span> -->
                </div>
        
                </div>
        
                </div>
        
                
                </div>
        
                
                
            </div>
        </div>

        <% }) %>
    <% }else{ %>
        <div class="div p-4">
            <p class="text-danger">No coupons are available</p>
        </div>
    <% } %>
   </div>
</div>


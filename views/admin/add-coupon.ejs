<main id="main" class="main">

  <div class="pagetitle">
    <h1>Add Coupon</h1>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-6">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Add Coupon</h5>

            <!-- Coupon Form -->
            <form id="couponForm" action="/admin/add-coupon" method="post">
              <div class="row mb-3">
                <label for="couponName" class=" col-form-label">Coupon Name</label>
                <div class="col-sm-10">
                  <input type="text" name="name" class="form-control" id="couponName" required>
                </div>
              </div>

              <div class="row mb-3">
                <label for="offer" class=" col-form-label">Offer</label>
                <div class="col-sm-10">
                  <input type="text" name="offer" class="form-control" id="offer" required>
                </div>
              </div>

              <div class="row mb-3">
                <label for="minPurchase" class=" col-form-label">Minimum Purchase</label>
                <div class="col-sm-10">
                  <input type="number" name="minPurchase" class="form-control" id="minPurchase" required>
                </div>
              </div>

              <div class="row mb-3">
                <label for="couponType" class=" col-form-label">Coupon Type</label>
                <div class="col-sm-10">
                  <select class="form-select" name="couponType" id="couponType" required>
                    <option value="WELCOME">Welcome bonus</option>
                    <option value="purchase">Purchase Coupon</option>
                  </select>
                </div>
              </div>

              <div class="row mb-3">
                <label for="expirationDate" class="col-form-label">Expiration Date</label>
                <div class="col-sm-10">
                  <input type="date" name="expirationDate" class="form-control" id="expirationDate" required>
                </div>
              </div>

              <div class="row mb-3">
                <label for="couponCode" class=" col-form-label">Coupon Code</label>
                <div class="col-sm-10">
                  <div class="input-group">
                    <input type="text" class="form-control" name="couponCode" id="couponCode" readonly>
                    <button class="btn btn-secondary" id="coupon-code-btn">Generate Code</button>
                  </div>
                </div>
              </div>

              <div class="row mb-3">
                <label for="status" class=" col-form-label">Status</label>
                <div class="col-sm-10">
                  <select class="form-select" name="status" id="status" required>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                  </select>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                  <button type="submit" class="btn btn-primary">Add Coupon</button>
                </div>
              </div>
            </form><!-- End Coupon Form -->

          </div>
        </div>

      </div>

    </div>
  </section>

</main><!-- End #main -->

<script>
  const couponBtn = document.getElementById('coupon-code-btn');
  couponBtn.addEventListener('click', generateCouponCode);

  function generateCouponCode(e) {
    e.preventDefault();
    const randomCode = Math.random().toString(36).substring(2, 10).toUpperCase();
    document.getElementById('couponCode').value = randomCode;
  }
</script>







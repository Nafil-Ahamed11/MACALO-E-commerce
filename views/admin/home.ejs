document.addEventListener("DOMContentLoaded", () => {
    async function fetchPaymentReport() {
      try {
        const response = await fetch('/admin/payment-report');
        if (!response.ok) {
          throw new Error('Failed to fetch payment report');
        } 
        const data = await response.json();
        updatePieChart(data);
      } catch (error) {

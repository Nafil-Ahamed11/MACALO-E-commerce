      }
    }

    function updatePieChart(data) {
      const { cashOnDeliveryCount, onlineCount } = data;

      const chart = echarts.init(document.querySelector("#trafficChart"));
      chart.setOption({
        tooltip: {
          trigger: 'item'
        },
        legend: {
